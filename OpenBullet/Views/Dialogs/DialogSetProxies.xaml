<Page x:Class="OpenBullet.DialogSetProxies"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenBullet"
      mc:Ignorable="d" 
      d:DesignHeight="80" d:DesignWidth="300"
      Title="DialogSetProxies">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0">
            <Label Content="Proxies:"/>
            <RadioButton x:Name="proxiesDefaultRadio" Content="Default" Margin="0 0 5 0" />
            <RadioButton x:Name="proxiesOnRadio" Content="On" Margin="0 0 5 0"/>
            <RadioButton x:Name="proxiesOffRadio" Content="Off" />
        </DockPanel>
        <Button Grid.Row="1" x:Name="selectButton" Content="Select" Click="selectButton_Click" Margin="0 5 0 0"/>
    </Grid>
</Page>
